<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
  			http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="hibernatePersistenceUnit"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>com.softserveinc.softtour.entity.Country</class>
        <class>com.softserveinc.softtour.entity.Favorite</class>
        <class>com.softserveinc.softtour.entity.Feedback</class>
        <class>com.softserveinc.softtour.entity.Food</class>
        <class>com.softserveinc.softtour.entity.HistoryRecord</class>
        <class>com.softserveinc.softtour.entity.HistoryRequest</class>
        <class>com.softserveinc.softtour.entity.Hotel</class>
        <class>com.softserveinc.softtour.entity.Region</class>
        <class>com.softserveinc.softtour.entity.Role</class>
        <class>com.softserveinc.softtour.entity.Tour</class>
        <class>com.softserveinc.softtour.entity.User</class>
		
		<exclude-unlisted-classes />
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="none" />
		</properties>
	</persistence-unit>
</persistence>